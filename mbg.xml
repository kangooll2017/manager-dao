<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
	<!-- 逆向工程 -->
	<context id="DB2Tables" targetRuntime="MyBatis3">
		
		<!-- 去掉大量的注解 -->
		<commentGenerator>
			<property name="suppressAllComments" value="true" />
		</commentGenerator>
		
		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://localhost:3306/chilema" userId="root"
			password="123456">
		</jdbcConnection>

		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

		<!-- pojo生成的地方 , 注意自定义的部分mymanager-pojo -->
		<javaModelGenerator targetPackage="com.chilema.manager.bean"
			targetProject="..\manager-pojo\src\main\java">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>

		<!-- sql映射文件生成的地方 -->
		<sqlMapGenerator targetPackage="mybatis.mapper"
			targetProject=".\src\main\resources">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>

		<!-- dao接口生成的地方 -->
		<javaClientGenerator type="XMLMAPPER"
			targetPackage="com.chilema.manager.dao" targetProject=".\src\main\java">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>

		<!-- 只要是数据库对应的pojo，我们都以T开头 -->
		<table tableName="t_user" domainObjectName="TUser"></table>
		

	</context>
</generatorConfiguration>